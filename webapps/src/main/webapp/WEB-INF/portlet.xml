<?xml version="1.0" encoding="ISO-8859-1"?>

<portlet-app
  xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="1.0">
  <portlet>
    <description>Automatic Translation Administration portlet</description>
    <portlet-name>automaticTranslationAdministration</portlet-name>
    <display-name>Automatic Translation Administration</display-name>
    <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
    <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/html/automaticTranslationAdministration.html</value>
    </init-param>
    <init-param>
      <name>preload.resource.bundles</name>
      <value>locale.portlet.automaticTranslation.automaticTranslationAdministration</value>
    </init-param>
    <expiration-cache>-1</expiration-cache>
    <cache-scope>PUBLIC</cache-scope>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.automaticTranslation.automaticTranslationAdministration</resource-bundle>
    <portlet-info>
      <title>Automatic Translation Administration portlet for eXo Platform</title>
      <short-title>automatic-translation-administration</short-title>
      <keywords>automatic-translation-administration</keywords>
    </portlet-info>
    <security-role-ref>
      <role-name>admin</role-name>
      <role-link>admin</role-link>
    </security-role-ref>
  </portlet>

  <portlet>
    <portlet-name>AutomaticTranslationExtension</portlet-name>
    <display-name>Automatic Translation Extension Application</display-name>
    <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
    <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/html/automaticTranslationExtension.html</value>
    </init-param>
    <expiration-cache>-1</expiration-cache>
    <cache-scope>PUBLIC</cache-scope>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.automaticTranslation.automaticTranslationExtension</resource-bundle>
    <portlet-info>
      <title>Automatic Translation Extension Application</title>
      <keywords>Automatic Translation Extension Application</keywords>
    </portlet-info>
  </portlet>
</portlet-app>
